#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["MicroServices/MicroService.SignalR/MicroService.SignalR.csproj", "MicroServices/MicroService.SignalR/"]
COPY ["Infrastructure/MicroServic.Dto/MicroService.Dto.csproj", "Infrastructure/MicroServic.Dto/"]
COPY ["Infrastructure/MicroService.Method/MicroService.Method.csproj", "Infrastructure/MicroService.Method/"]
COPY ["Infrastructure/MicroService.Models/MicroService.Models.csproj", "Infrastructure/MicroService.Models/"]
COPY ["Infrastructure/MicroService.Extend/MicroService.Extend.csproj", "Infrastructure/MicroService.Extend/"]
COPY ["Infrastructure/MicroService.Interfaces/MicroService.Interfaces.csproj", "Infrastructure/MicroService.Interfaces/"]
COPY ["Infrastructure/MicroService.Repository/MicroService.Repository.csproj", "Infrastructure/MicroService.Repository/"]
RUN dotnet restore "MicroServices/MicroService.SignalR/MicroService.SignalR.csproj"
COPY . .
WORKDIR "/src/MicroServices/MicroService.SignalR"
RUN dotnet build "MicroService.SignalR.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MicroService.SignalR.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MicroService.SignalR.dll"]